---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Contact" title="Let's Talk!" />

  <Features2
    columns={2}
    items={[
      {
        title: 'Email',
        description: 'evan@evanharmon.com',
        icon: 'tabler:mail',
        href: 'mailto:evan@evanharmon.com',
      },
      {
        title: 'Meet With Me',
        description:
          "I am based in Kansas City and available to meet over coffee. Feel free to put a meeting on my calendar and let's talk in person!",
        icon: 'tabler:map-pin',
        href: 'https://fantastical.app/evanharmon',
      },
    ]}
  />

  <Features2
    title="Elsewhere"
    tagline="Find Me"
    columns={3}
    items={[
      {
        title: 'GitHub',
        description: 'evanharmon1',
        href: 'https://github.com/evanharmon1',
        icon: 'tabler:brand-github',
      },
      {
        title: 'Mastodon',
        description: 'evanharmon@mastodon.social',
        href: 'https://mastodon.social/@evanharmon',
        icon: 'tabler:brand-mastodon',
      },
      {
        title: 'BlueSky',
        description: 'evanharmon.bsky.social',
        href: 'https://bsky.app/profile/evanharmon.bsky.social',
        icon: 'tabler:brand-bluesky',
      },
      {
        title: 'LinkedIn',
        description: 'evanharmon1',
        href: 'https://www.linkedin.com/in/evanharmon1',
        icon: 'tabler:brand-linkedin',
      },
      {
        title: 'omg.lol',
        description: 'evanharmon',
        href: 'https://evanharmon.omg.lol',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Meetup',
        description: 'KC Tech Enthusiasts',
        href: 'https://meetup.com/kctechbookclub/',
        icon: 'tabler:brand-meetup',
      },
    ]}
  />
</Layout>
