---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Evan Harmon',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        text: 'Memex',
        href: 'https://www.evanharmon.com/memex',
        target: '_blank',
        icon: 'tabler:sitemap',
      },
      { text: 'Projects', href: '#projects' },
    ]}
    image={{ src: '~/assets/images/flammarion.jpeg', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title"> Evan Harmon </Fragment>

    <Fragment slot="subtitle">
      <span>Coding cantankerous contraptions and proffering philosophical piffle since the Tokugawa shogunate.</span>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Projects"
    id="projects"
    items={[
      {
        title: 'Harmon Stack',
        description:
          'New project template to help bootstrap and streamline projects with pre-configured CI/CD, security tests, pre-commit, linting, docs, task runner, etc. Uses the python project "Copier"',
        icon: 'flat-color-icons:capacitor',
        href: 'https://github.com/evanharmon1/harmon-stack',
      },
      {
        title: 'Harmon Ops',
        description:
          'Various scripts, dotfiles, automation, and IaC for my developer environment and homelab infrastructure with self-hosted apps, Raspberry Pis, Dockerfiles, etc.',
        icon: 'flat-color-icons:heat-map',
        href: 'https://github.com/evanharmon1/harmon-ops',
      },
      {
        title: 'Memex',
        description:
          "I use the Obsidian markdown app for my day-to-day notes as a PKM/zettelkasten and share them here as a so-called 'digital garden'",
        icon: 'flat-color-icons:mind-map',
        href: 'https://evanharmon.com/memex',
      },
      {
        title: 'Triplicate Group',
        description: 'Co-founded by Cayden Sommer and myself to streamline entrepreneurial projects',
        icon: 'flat-color-icons:binoculars',
        href: 'https://triplicategroup.com',
      },
      {
        title: 'Sommer Lawn & Landscape',
        description:
          'Founded by Cayden Sommer, I am helping revamp its technology, operations, and digital marketing strategy',
        icon: 'flat-color-icons:shop',
        href: 'https://sommerlawn.com',
      },
      {
        title: 'Contraption Labs',
        description: 'Coming soon...',
        icon: 'flat-color-icons:circuit',
        href: 'https://contraptionlabs.com',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts title="Blog" />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      { text: 'Contact Me', href: '/contact' },
      { text: 'Meet With Me', href: 'https://fantastical.app/evanharmon' },
    ]}
  >
    <Fragment slot="title"> Let's Talk! </Fragment>
  </CallToAction>
</Layout>
